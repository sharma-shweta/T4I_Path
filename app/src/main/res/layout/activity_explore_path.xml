<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome">
    <TextView
        android:text="Let's Explore"
        android:id="@+id/explorePath"
        style="@style/LargeWhiteCenter"
        android:layout_alignParentTop="true"
        android:layout_marginTop="200dp" />
    <TextView
        android:text="Path!"
        style="@style/LargeWhiteCenter"
        android:layout_below="@id/explorePath"
        android:gravity="center"
        android:layout_marginTop="40dp" />
    <ImageButton
        android:id="@+id/getStartedButton"
        android:src="@drawable/getstarted_button"
        style="@style/CenterTrnspBg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp"
        android:onClick="gotoClassData"/>
</RelativeLayout>