<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gender_bg">
    <TextView
        android:text="Tell us more about yourself"
        android:id="@+id/genderTitle"
        style="@style/MediumWhiteCenter"
        android:layout_width="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:paddingLeft="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:paddingTop="50dp"
        android:layout_marginTop="200dp"
        android:id="@+id/teacher_contact_title">
        <TextView
            android:text="Contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="bottom"
            android:id="@+id/teacher_contact_text"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:paddingLeft="25dp"
            android:paddingTop="15dp" />
        <ImageView
            android:src="@drawable/telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:id="@+id/teacher_gender_imgview"
            android:scaleType="fitCenter" />
    </LinearLayout>
    <EditText
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/teacher_contact_title"
        android:id="@+id/teacher_contact_number"
        android:layout_weight="2"
        android:hint="Phone Number"
        android:singleLine="true"
        android:width="150dp"
        android:layout_marginLeft="25dp" />
    <ImageButton
        android:id="@+id/contactNext"
        android:src="@drawable/tick"
        style="@style/CenterTrnspBg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:onClick="gotoSelSch"/>
</RelativeLayout>