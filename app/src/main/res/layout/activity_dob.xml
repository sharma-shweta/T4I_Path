<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dob_bg">
    <TextView
        android:text="Tell us more about yourself"
        android:id="@+id/genderTitle"
        style="@style/MediumWhiteCenter"
        android:layout_width="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:paddingLeft="30dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:paddingTop="50dp"
        android:layout_marginTop="200dp"
        android:id="@+id/dob_title">
        <TextView
            android:text="Date of Birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="bottom"
            android:id="@+id/teacher_gender_text"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:paddingLeft="25dp"
            android:paddingTop="15dp" />
        <ImageView
            android:src="@drawable/cake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:id="@+id/teacher_gender_imgview"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <ImageButton
        android:src="@drawable/next_button"
        style="@style/CenterTrnspBg"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:onClick="gotoContact"
        android:id="@+id/imageButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pick a date"
        android:id="@+id/dob_btn"
        android:layout_marginStart="23dp"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/dob_title"
        android:layout_alignParentStart="true"
        android:onClick="showDatePickerDialog" />
 </RelativeLayout>